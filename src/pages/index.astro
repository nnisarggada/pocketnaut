---
import Base from "@layouts/Base.astro";
import pb from "@utils/pocketbase";

let connected = false;

try {
  await fetch(pb.baseUrl);
  connected = true;
} catch (error) {
  console.log(error);
}
---

<Base title="PocketNaut by Nnisarg Gada - nnisarg.in">
  <div
    class="mx-auto flex min-h-screen w-full max-w-5xl flex-col items-center justify-center gap-4 p-4"
  >
    <h1 class="text-center text-3xl font-bold">
      Welcome to <a
        target="_blank"
        href="https://github.com/nnisarggada/pocketnaut"
        class="text-purple-400 underline underline-offset-4">PocketNaut!</a
      >
    </h1>
    <h1 class="text-center text-3xl font-bold">
      PocketBase is {!connected && "not"} connected!
    </h1>
  </div>
</Base>
